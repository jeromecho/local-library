extends layout 

block content 
    h1 #{title} genre #{genre.name}

    if books.length 
        p #[strong Delete the following books before deleting this genre]

        div(style='margin-left:20px;margin-top:20px')
            h4 Books
            dl
            each book in books 
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}
    else
        p Do you really want to delete this genre? The world will be sad if you do. 

        form(method='POST' action='')
            button(type='submit').btn.btn-primary Confirm delete 
